					<td><a href = "/delete-todo/<%= quot[i]._id %>" class ="btn btn-danger">Delete</a></td>
        </tr>
        <% } %>
		</tbody>
	</table>
<div>
<a id="btn" class="btn btn-success" href="/addtodo">Add todo</a>
</div>
</div>

