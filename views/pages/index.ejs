	<table class = "table table-striped">
		<caption></caption>
		<thead>
			<tr>
				<th>Todo List</th>
				<th>Date</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for (var i = 0; i < quot.length; i++) { %>
        <tr>
          <td><b><a href="/list/<%= quot[i]._id %>"> <%= quot[i].description %></a></b></td>
